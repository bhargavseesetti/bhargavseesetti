#include <stdio.h>

int main(void) {
 int a,b;
 char op;
 printf("enter two numbers (a:b) :");
 scanf("%d%d",&a ,&b);
 printf("enter an operators +,-,*,/");
 scanf("%c",&op);
 switch (op)
 {
   case'+' : printf ("%d",a+b);
             break;
   case'-' :printf ("%d",a-b);
             break;
   case'*' : printf("%d",a*b);
             break;
   case'%' : printf ("%d",a%b);
             break;
   default : printf("invalid operators");
}
return 0;
}
